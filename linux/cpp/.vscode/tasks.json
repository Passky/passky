{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0", //2.0.0为最新的版本
    "tasks": [
        {
            "label": "build", //任务名，和lanuch.json中的"preLaunchTask":"build"一致
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceRoot}/${fileBasenameNoExtension}.o"
            ], // g++ 后面的命令参数，这一行是整个配置的关键如果错了则vscode会找不到要编译的文件
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "location": 2,
                    "message": 5
                }
            }
        }
    ]
}